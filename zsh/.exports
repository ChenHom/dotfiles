#!/usr/bin/env bash
export EDITOR='vim';
export GPG_TTY=$(tty);
export BASH_SILENCE_DEPRECATION_WARNING=1;

# API Keys (真實內容請在 ~/.secrets 設定，這裡僅為佔位符)
export OPENAI_KEY="${OPENAI_KEY:-MASKED}"
export OPENAI_API_KEY="${OPENAI_API_KEY:-$OPENAI_KEY}"
export GEMINI_API_KEY="${GEMINI_API_KEY:-MASKED}"
export DEFAULT_MODEL=gpt-4
export GOPATH=$HOME/go
export PATH=$GOPATH/bin:$PATH
export GITLAB_HOME=$HOME/code/gitlab

export EDAMAM_API_KEY="${EDAMAM_API_KEY:-MASKED}"
export EDAMAM_APP_ID="${EDAMAM_APP_ID:-MASKED}"

export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"
